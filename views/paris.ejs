<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="css/styles.css" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <title>Weather App</title>
</head>
<body style="background-color: rgb(233, 212, 183);">
    <form action="/paris" method="post">

        <div class="container">
            <input type="text" name="cityName" id="box" placeholder="Search anything..." class="search__box">
            <button type="submit"><i class="fas fa-search search__icon" id="icon" onclick="toggleShow()"></i></button>
        </div>

    </form>
   
    <br>
    <br>


    <div class="gallery">
    <div class="content" style="background-color: aliceblue;">

        <h1 name="tb"><%= city %></h5>
        <img name="tm" src="<%= igu %>">
        <h3 name="ts"><%= des %></h3>
        <br>
        <hr class="rounded">
        <span style="white-space: 2px;">Tempreature</span>
        <p name="tc"><%= t %> F</p>
        <hr class="rounded">
        <span style="white-space: 2px;">Minimum Temp</span>
        <p name="tp" style="font-size: large;"><%= tm %> F</p>
        <hr class="rounded">
        <span style="white-space: 2px;">Maximum Temp</span>
        <p><%= tma %> F</p>
        <hr class="rounded">
        <span style="white-space: 2px;">Humidity</span>
        <p><%= hu %> F</p>
        <hr class="rounded">
    
    <br>

    <a style="text-decoration: none; color: #ffffff;" href="/" class="buy-1">Return</a>
    </div>
    </div>


    
    <script>
        function toggleShow () {
            var el = document.getElementById("box");
            el.classList.toggle("show");
          }
    </script>




</body>
</html>